{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "./src/"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
